# vim: set ft=sxhkdrc:

# Close window
super + q
  bspc window -c

super + z
  scratchwin

# Toggle floating or fullscreen for a window
super + {s, f}
  bspc window -t {floating,fullscreen}

# Run a thing
super + p
  dmenu_run

# Quit bspwm
super + 0
  bspc quit

# Balance tree
super + b
    bspc desktop -B

# direction to split
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

# Select windows, or move
super + {h,j,k,l}
    bspc window -f {left,down,up,right}

# enlarge window in direction
super + ctrl + {Left,Down,Up,Right}
    bspc window --edge {left -10,down +10,up -10,right +10}

# shrink window in direction
super + ctrl + shift + {Left,Down,Up,Right}
    bspc window --edge {right -10,up +10,down -10,left +10}

# move window in direction
super + {H,J,K,L}
	bspc window --swap {left,down,up,right}

# switch last window
super + Tab
    bspc window --focus last

super + button{1,3}
    bspc pointer -g {move,resize_corner}

super + !button{1,3}
    bspc pointer -t %i %i

super + @button{1,3}
    bspc pointer -u

super + {1,2,3,4,5}
    bspc desktop -f ^{1,2,3,4,5}

super + shift + {1,2,3,4,5}
    bspc window -d ^{1,2,3,4,5}

###

super + Return
    urxvt

super + w
    chromium

XF86AudioRaiseVolume
  volume + && popup volume: $(volume level)

XF86AudioLowerVolume
  volume - && popup volume: $(volume level)

XF86AudioMute
  volume ! && popup volume: $(volume state)

XF86Audio{Prev,Next}
    mpc {prev, next}

XF86AudioPlay
    mpc toggle
