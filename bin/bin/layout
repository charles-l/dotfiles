#!/bin/sh
dev_layout() {
    urxvt -e 'tmux' &
    sleep 0.1
    herbstclient split right 0.3
    herbstclient focus left
    herbstclient split bottom 0.5
    herbstclient focus down
    urxvt -e 'tmux' &
    sleep 0.1
    herbstclient focus right
    chromium &
}

web_layout() {
    urxvt -e 'irssi' &
    sleep 0.1
    herbstclient split right 0.4
    herbstclient focus right
    chromium &
}

usage() {
    echo "layout [LAYOUT]"
    echo " dev - development layout"
    echo " web - for surfing and stuff"
}

case $1 in
    "dev")
        dev_layout ;;
    "web")
        web_layout ;;
    *)
        usage ;;
esac

