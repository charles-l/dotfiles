#!/bin/sh
#
# z3bra - (c) wtfpl 2014
# Create a small popup with the given text
#
# depends: lemonbar, wattr and common sense

# bar options
font='-*-tewi-medium-*-*-*-*-*-*-*-*-*-*-*'
bg="#000"
fg="#CCC"
hl="#ff443232"
strlen=30

default_geometry() {
    # get screen size
    x=$(wattr w `lsw -r`)
    y=$(wattr h `lsw -r`)

    width=250
    height=20

    offy=0
    offx=$(( x - width ))

    echo "${width}x${height}+${offx}+${offy}"
}

while getopts "c:d:g:h" opt; do
    case $opt in
        d) SLEEP=$OPTARG   ;;
        g) GEOM=$OPTARG    ;;
        h) usage; exit 0   ;;
        c) COMMAND=$OPTARG ;;
    esac
done

GEOM=${GEOM:-$(default_geometry)}
SLEEP=${SLEEP:-5}

if [ -t 0 ]; then
    CONTENT=$@
else
    CONTENT=$(cat)
fi

str="$CONTENT"

if [ ! -z "$COMMAND" ]; then
    str="%{A:$COMMAND:}$str%{A}"
fi

if [[ $(expr length "$str") -gt $strlen ]]; then
    (echo $str | skroll -n $strlen -d0.1 -r) | xargs -I@ echo "%{c}" @ | lemonbar -d -g $GEOM -B $bg -F $fg -f $font | sh &
else
    (echo "%{c}" $str; sleep $SLEEP) | lemonbar -d -g $GEOM -B $bg -F $fg -f $font | sh &
fi
