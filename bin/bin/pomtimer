#!/bin/sh

show() {
    echo "$1"
    popup "$1"
}
while true; do
    show "start working!"
    sleep 1500 && show "break"; sleep 300 && show "back to work"
    sleep 1500 && show "break"; sleep 300 && show "back to work"
    sleep 1500 && show "break"; sleep 300 && show "back to work"
    sleep 1500 && show "break"; sleep 900 && show "back to work"
done
