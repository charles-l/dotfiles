#!/bin/sh
s=`mpc | head -n1`
track=`echo $s | cut -d'-' -f1 | awk '{$1=$1};1' | tr ' ' '+'`
artist=`echo $s | cut -d'-' -f2 | awk '{$1=$1};1' | tr ' ' '+'`
url="http://www.last.fm/music/$artist/_/$track"
img=$(curl -s -L $url | grep -B2 'cover-art' | head -n1 | grep -o '".*"' | tr -d '"')
curl -s $img > /tmp/cur_cover.png
