#!/bin/sh
# create a scratch window in the lower left corner of the screen
# thanks to z3bra for inspiration!
#
# deps
#  - urxvt
#  - wmutils
#
# charlie - (c) 2015

SF=/tmp/scratch
if [ -f $SF ]; then
    W="$(more $SF)"
    mapw -t $W
else
    urxvt -name URxvtScratch &
    sleep 0.1

    wid=$(pfw)
    w=$(wattr w $wid)
    h=$(wattr h $wid)
    fh=$(wattr h `lsw -r`)
    wtp 0 $((fh - h)) $(wattr whi $wid)

    pfw > $SF
fi
