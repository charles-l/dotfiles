#!/bin/sh
# my bar!
#
# deps:
#  - lemonbar
#
# charlie - (c) 2015

default_geometry() {
    # get screen size
    x=$(wattr w `lsw -r`)
    y=$(wattr h `lsw -r`)

    width=100
    height=20

    offy=0 #$(($y - $height))
    #offx=$(( x - x/2 - $width/2 ))
    offx=$(($x - $width))

    echo "${width}x${height}+${offx}+${offy}"
}

lemoncommand() {
    lemonbar -d -g `default_geometry` -B '#000' -F'#AAA' \
        -f "-*-tewi-medium-*-*--*-*-*-*-*-*-*-*" -f "-*-siji-*-*-*--*-*-*-*-*-*-*-*"
}

while true
do
    TIME=`date "+%H:%M %-m/%-d"`
    echo " %{c}$TIME"
    sleep 60
done | lemoncommand
