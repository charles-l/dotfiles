#!/bin/sh

default_geometry() {
    # get screen size
    x=$(wattr w `lsw -r`)
    y=$(wattr h `lsw -r`)

    width=500
    height=20

    offy=0
    offx=$(( x - x/2 - $width/2 ))

    echo "${width}x${height}+${offx}+${offy}"
}

while true
do
    VOL=`progbar $(volume | sed -e 's/%.*$//')`
    CUR_DESKTOP=`bspc control --get-status | tr -d 'WLT:' | tr 'mMoOfF:0-9' '-=*+_+  '`
    TIME=`date "+%H:%M"`
    echo " vol $VOL %{c}$CUR_DESKTOP" "%{r}$TIME "
done | lemonbar -g `default_geometry` \
    -f "-nil-profont-medium-r-normal--12-120-72-72-c-60-iso8859-1"

echo "â–¡"
