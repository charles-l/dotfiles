#!/bin/sh
#
# charlie - (c) 2015
# fetch weather from wordy weather

curl -s weather.nucleol.us/18049 \
               | tr '\n' '|' \
               | grep -o '<tbody>.*</tbody>' \
               | sed -e 's/<[^>]*>//g' \
               | tr '|' '\n' \
               | sed -e 's/^[ \t]*//' \
               | sed '/^$/N;/^\n$/D'

