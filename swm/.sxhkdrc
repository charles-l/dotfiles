# vim: set ft=sxhkdrc:

super + Q
  killw $(pfw)

super + t
  GAP=80 tile

super + f
  fullscreen $(pfw)

super + {h,j,k,l}
 closest {h,j,k,l}

# Keyboard movement
super + {y,u,b,n}
  snap {tl,tr,bl,br}

super + g
  wmv -a $(($(wattr w `lsw -r`) / 2)) $(($(wattr h `lsw -r`) / 2)) $(pfw)

super + {H,J,K,L}
  mywmv {h,j,k,l}

super + alt + {h,j,k,l}
  mywrs {h,j,k,l}

super + N
  fullscreen $(pfw) v

super + M
  fullscreen $(pfw) h

super + Tab
  focus next

super + shift + Tab
  focus prev

###

super + p
  dmenu_run -x 5 -y 5 -h 20 -w 400

super + z
  sctchwin

super + w
    chromium

XF86AudioRaiseVolume
  volume + && popup volume: $(volume level)

XF86AudioLowerVolume
  volume - && popup volume: $(volume level)

XF86AudioMute
  volume ! && popup volume: $(volume state)

XF86Audio{Prev,Next}
    mpc {prev, next}

XF86AudioPlay
    mpc toggle && popup `mpc current`

###

super + Return
  urxvt -e tmux
