# vim: set ft=sxhkdrc:

super + Q
  killw $(pfw)

super + t
  GAP=40 snap tile

super + f
  fullscreen $(pfw)

super + {h,j,k,l}
 closest {h,j,k,l}

# Keyboard movement
super + {y,u,b,n}
  GAP=40 snap {tl,tr,bl,br}

super + g
  wmv -a $(($(wattr w `lsw -r`) / 2)) $(($(wattr h `lsw -r`) / 2)) $(pfw)

super + {H,J,K,L}
  mywmv {h,j,k,l}

super + alt + {h,j,k,l}
  mywrs {h,j,k,l}

super + N
  fullscreen $(pfw) v

super + M
  fullscreen $(pfw) h

super + Tab
  focus next

super + shift + Tab
  focus prev

super + {1,2,3,4,5}
  wgroup -M {1,2,3,4,5}

super + shift + {1,2,3,4,5}
  wgroup -s $(pfw) {1,2,3,4,5}

###

super + p
  dmenu_run -x 5 -y 5 -h 30 -w 400

super + z
  sctchwin

super + w
  chromium

XF86AudioRaiseVolume
  volume + && popup volume: $(volume level)

XF86AudioLowerVolume
  volume - && popup volume: $(volume level)

XF86AudioMute
  volume ! && popup volume: $(volume state)

XF86Audio{Prev,Next}
  mpc {prev, next} || sc {prev, next}

XF86AudioPlay
  mpc toggle && popup `cursong` || sc pause && popup `sc cur_playing | cut -d'|' -f1`

###

super + Return
  urxvt -e tmux && wtp 40 40 120 240 $(pfw)
