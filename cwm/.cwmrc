# Set default Xft(3) font
fontname "Terminus:pixelsize=14:medium"

moveamount 10
snapdist 10
sticky no

# Any entry here is shown in the application menu
command lock             "sudo zzz && slock"
command term             "st -e tmux"
command chromium         chromium
command qutebrowser      qutebrowser
command steam		     steam
command top              "st -e top"

# Autogroup definitions
autogroup 1 "st-256color,XTerm"
autogroup 2 "chromium"

# Key bindings
bind 4-r        label
bind 4S-q       delete
bind 4-p        exec
bind 4-f        freeze
bind C4M-r      restart
bind 4-Return   st
bind S4-Return  "st -e tmux"
bind S4-h       hmaximize
bind S4-v       vmaximize
bind 4-x        fullscreen
bind 4-1        group1
bind 4-2        group2
bind 4-3        group3
bind 4-4        group4
bind 4-5        group5
bind 4-6        group6
bind 4S-1       movetogroup1
bind 4S-2       movetogroup2
bind 4S-3       movetogroup3
bind 4S-4       movetogroup4
bind 4S-5       movetogroup5
bind 4S-6       movetogroup6
bind 4-Tab      cycle
bind 4S-Tab     rcycle

bind 4C-h       bigmoveleft
bind 4C-l       bigmoveright
bind 4C-j       bigmovedown
bind 4C-k       bigmoveup

bind 4SC-h      bigresizeleft
bind 4SC-l      bigresizeright
bind 4SC-j      bigresizedown
bind 4SC-k      bigresizeup

bind C-Left     unmap
bind C-Right    unmap
bind C-Up       unmap
bind C-Down     unmap

bind CS-Left     unmap
bind CS-Right    unmap
bind CS-Up       unmap
bind CS-Down     unmap

mousebind M-1 unmap

# Mouse bindings
mousebind 4-1   window_move
mousebind 4-3   window_resize

borderwidth 2

# hack for dev (don't jump to windows that get restarted)
ignore game
ignore bochs
